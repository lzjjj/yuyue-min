/**index.wxss**/

.index-head {
  margin: 0 0.3rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

.picker {
  border-radius: 3px 0 0 3px;
  padding: 0 0.2rem;
  width: 3.3rem;
  height: 2.1rem;
  background-color: #ab312c;
  display: flex;
  align-items: center;
  justify-content: center;
}

.picker-view {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 0.6rem;
  color: #fff;
}

.picker-img {
  width: 1.2rem;
  height: 1.2rem;
}

.search-input {
  flex: 1;
  /* background-color: red; */
  border: 1px solid #ab312c;
  height: 2rem;
  padding-left: 0.5rem;
}

.search-button {
  width: 3.3rem;
  height: 2.1rem;
  background-color: #ab312c;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0 3px 3px 0;
}

.search-img {
  width: 25px;
  height: 25px;
}

.conditions {
  margin: 1rem 0;
  width: 100%;
  white-space: nowrap;
  overflow-x: scroll;
  -webkit-overflow-scrolling: touch;
  overflow-y: hidden;
  border-top: 1px solid #dedede;
  border-bottom: 1px solid #dedede;
}

.conditions-view {
  display: inline-block;
  box-sizing: border-box;
  font-size: 0.85rem;
  color: #959494;
  margin: 0.56rem 0;
  padding: 0 0.5rem;
  border-right: 1px solid #dedede;
}

.conditionsactive {
  color: #e11f1f;
}

.conditions::-webkit-scrollbar {
  display: none;
}

.tools-list {
  margin-top: 0.7rem;
}

.tool-item {
  padding: 0 0.75rem 0.7rem 0.75rem;
  width: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.tool-img {
  width: 6.2rem;
  height: 5rem;
}

.item-right {
  height: 5rem;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 65%;
  margin-left: 0.5rem;
}

.item-right-up {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tool-name {
  /* flex: 1; */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 0.77rem;
  color: #000;
}

.tool-detail {
  font-size: 0.68rem;
  color: #adadad;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.title-none {
  text-align: center;
  position: relative;
  top: 350px;
  font-size: 0.9rem;
}
