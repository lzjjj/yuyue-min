/* pages/mine/mine.wxss */
.head{
  width: 100%;
  height:9.7rem;
  background-color: #ab312c;
  display: flex;
  justify-content: center;
  align-items: center;
}
.head-img{
  width: 3.9rem;
  height: 3.9rem;
  border-radius: 50%;
  background-color: #ffffff;
}
.mine-list{
  padding: 1.73rem 1rem 0 1rem;
}
.list-item{
  display: flex;
  align-items: center;
  font-size:0.9rem;
  border-bottom: 1px solid #f8f8f8;
  padding-bottom: 0.4rem;
}
.item-img{
  width: 25px;
  height: 25px;
}
.info-item{
  color: #000000;
  font-size: 0.8rem;
  padding: 0.25rem 0 0 0.5rem;
  border-bottom: 1px solid #f8f8f8;
  margin-bottom: 0.25rem;
}