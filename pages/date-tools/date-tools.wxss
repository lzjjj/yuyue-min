/* pages/date-tools/date-tools.wxss */
page{
  width: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
}
.tool-info {
  margin: 0.85rem 0.5rem;
  display: flex;
  width: 100%;
}

.tool-img {
  width: 7rem;
  height: 7rem;
  margin-right: 0.5rem;
}

.info-right {
  width: 60%;
  font-size: 0.77rem;
  height: 7rem;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.info-intro {
  color: #adadad;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.date-msg {
  margin: 1.25rem 0 0 0.5rem;
}

.title {
  color: #e11f1f;
  font-size: 0.9rem;
}
.time{
  position: relative;
  margin-top: 1rem;
  display: flex;
}
.time-img{
  width: 25px;
  height: 25px;
  margin-right: 1rem;
}
