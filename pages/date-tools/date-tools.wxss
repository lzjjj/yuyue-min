.label-input{
  position: relative;
  font-size: 0.8rem;
  width: 80%;
  border-bottom: 1px solid #dedede;
}
.time-down{
  right: 6%;
  position: absolute;
  width: 25px;
  height: 25px;
}
.time-down-active{
  animation: spin 0.5s linear;
  animation-fill-mode :forwards;
}
@keyframes spin {
  0%   { transform: rotate(0); }
  100% { transform: rotate(180deg); }
}
.label{
  font-size: 0.9rem;
  color: #000000;
}
.btn{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 2.29rem;
  width: 94%;
  background-color: #ab312c;
  color: #ffffff;
  font-size: 0.88rem;
  margin-bottom: 1rem;
}
.index-head {
  margin: 0.5rem 0.3rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-input {
  width: 96%;
  /* background-color: red; */
  border: 1px solid #ab312c;
  height: 2rem;
  padding-left: 0.5rem;
}

.search-button {
  width: 3.3rem;
  height: 2.1rem;
  background-color: #ab312c;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0 3px 3px 0;
}

.search-img {
  width: 25px;
  height: 25px;
}

.customer-list {
  width: 100%;
  box-sizing: border-box;
}

.item {
  padding: 1rem 0.5rem;
  color: #000;
  font-size: 0.8rem;
  border-bottom: 1px solid #f8f8f8;
}

.item-up {
  display: flex;
  justify-content: space-between;
}

.address {
  padding-top:0.5rem;
  font-size: 0.7rem;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
